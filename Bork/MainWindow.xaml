
<Window x:Class="Bork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bork"
        xmlns:p="clr-namespace:Bork.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="aruLabel" Content="{x:Static p:Resources.TestAru}" HorizontalAlignment="Left" Margin="302,24,0,0" VerticalAlignment="Top"/>
        <Image Source="{Binding Source={x:Static p:Resources.TestAru}}" x:Name="aruImage" HorizontalAlignment="Left" Height="205" Margin="64,45,0,0" VerticalAlignment="Top" Width="206" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform/>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
